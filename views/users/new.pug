extends ../application.pug

block content
    .row
      .col-xs-6.offset-xs-3
        h1 Register a user
        form(action="/authentication/register" method="POST")
          .form-group
            input(type="name" name="name" class="form-control" placeholder="Name" required=true)
          .form-group
            input(type="surname" name="surname" class="form-control" placeholder="Surname"  required=true)
          .form-group
            input(type="email" name="email" class="form-control" placeholder="email"  required=true)
          .form-group
            input(type="password" name="password" class="form-control" placeholder="password"  required=true)
          .form-group(class="text-xs-right")
            button(type="submit" class="btn btn-succes btn-lg") Register
